#!/bin/sh

USERNAME=$1
CONTAINER_DIR=$2
SOURCE_FILE_REAL_PATH=$3
DEST_FILE_CHROOT_PATH=$4 # assume starts with a /

REALDEST=$CONTAINER_DIR$DEST_FILE_CHROOT_PATH

mkdir -v -p `dirname $REALDEST`
mv -v $SOURCE_FILE_REAL_PATH $REALDEST || exit 100
chown $USERNAME:$USERNAME $REALDEST
chmod 600 $REALDEST
